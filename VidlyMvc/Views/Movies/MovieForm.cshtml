@model VidlyMvc.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Movie == null)
{
    <h2>New Movie</h2>
}
else
{
    <h2>Edit Movie</h2>
}

@using (Html.BeginForm("save", "Movies"))
{
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.LabelFor(c => c.Movie.Name, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(c => c.Movie.Name, new { @class = "form-control col-md-10" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Movie.ReleaseDate, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(c => c.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control col-md-10" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Movie.GenreId, new { @class = "control-label col-md-2" })
            @Html.DropDownListFor(c => c.Movie.GenreId, new SelectList(Model.Genre, "Id", "Name")
           , "Select Genre", new { @class = "form-control", style = "width: 200px;" })
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Movie.NumberInStock, new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(c => c.Movie.NumberInStock, new { @class = "form-control col-md-10" })
        </div>
    </div>


        @Html.HiddenFor(c => c.Movie.Id)
        <button type="submit" class="btn btn-primary">Save</button>    

   
}