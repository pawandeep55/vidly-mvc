@model VidlyMvc.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<table class="table table-bordered table-hover table-striped">
    <tr>
        <td>Genre</td>
        <td>@Model.Genre.Name</td>
    </tr>
    
    <tr>
        <td>Release Date</td>
        <td>@Model.ReleaseDate.ToShortDateString()</td>
    </tr>
    <tr>
        <td>Date Added</td>
        <td>@Model.DateAdded.ToShortDateString()</td>
    </tr>
    <tr>
        <td>Number in Stock</td>
        <td>@Model.NumberInStock</td>
    </tr>
</table>

