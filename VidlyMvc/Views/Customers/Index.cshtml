@model IEnumerable<VidlyMvc.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

@if (!Model.Any())
{
    <p>we don't have any customers yet</p>
}
else
{
    <table class="table table-bordered table-hover table-striped">

        <thead>
            <tr>
               <th>Customers</th>
                <th>Discount</th>
            </tr>
            
        </thead>
        <tbody>

            @foreach (var cus in Model)
            {
                <tr>
                    <td>@Html.ActionLink(cus.Name, "details", "Customers", new { id=cus.Id }, null)</td>
                    <td>@cus.MembershipType.Name</td>
                </tr>
            }
        </tbody>

    </table>

}