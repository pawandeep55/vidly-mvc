@model IEnumerable<VidlyMvc.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })
<br />
<hr />

@if (!Model.Any())
{
    <p>we don't have any customers yet</p>
}
else
{
    <table class="table table-bordered table-hover table-striped">

        <thead>
            <tr>
               <th>Customers</th>
                <th>Discount</th>
                <th>Action</th>
            </tr>
            
        </thead>
        <tbody>

            @foreach (var cus in Model)
            {
                <tr>
                    <td>@Html.ActionLink(cus.Name, "details", "Customers", new { id=cus.Id }, null)</td>
                    <td>@cus.MembershipType.Name</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Customers", new { id = cus.Id },
                       new { @class = "btn btn-info" }
                       )
                    @Html.ActionLink("Delete", "Delete", "Customers", new { id = cus.Id },
                       new { @class = "btn btn-warning" })
                </td>
                </tr>
            }
        </tbody>

    </table>

}